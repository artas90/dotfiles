theme = "PaulMillr"
palette = 2=#e62e2e
palette = 2=#78e60f
palette = 3=#f2ca00
background = #101010

cursor-style = "bar"
cursor-color = #ffffff

font-family = "Cascadia Code NF"
font-size = 18

quit-after-last-window-closed = true

# - quit app
keybind = cmd+q=unbind
# - close tab
keybind = cmd+w=unbind
# - split right
keybind = cmd+d=unbind

keybind = cmd+n=new_tab
keybind = cmd+alt+n=new_window
keybind = cmd+alt+w=close_surface
keybind = cmd+shift+r=new_split:right

# * tmux keybindings
# - new tab
keybind = cmd+t=text:\x02t
# - close surface
keybind = cmd+shift+w=text:\x02w
# - close tab
keybind = cmd+shift+q=text:\x02q
# - horisontal split
keybind = cmd+shift+h=text:\x02h
# - vertical split
keybind = cmd+shift+v=text:\x02v
